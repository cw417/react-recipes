body {
  background: linear-gradient(to right, #5dacbd, #24527a);
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.pad-left {
  padding-left: 0.5em;
}

.large-font {
  font-size: 1.5em;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container--header {
  margin-bottom: 2em;
}

.container--header__title {
  font-size: 3em;
  margin-bottom: 0.5em;
}

.container--ingredients {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}

.pad-left {
  padding-left: 0.5em;
}

.input--ingredientAmount {
  width: 4em;
}

.span--amount {
  width: 6em;
}

